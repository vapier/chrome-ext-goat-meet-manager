{
  "short_name": "GOAT meet manager",
  "name": "GOAT Meet Manager",
  "description": "Control Google Meet mute (audio+video) status from anywhere.",
  "version": "0.7",
  "homepage_url": "https://github.com/vapier/chrome-ext-goat-meet-manager",
  "manifest_version": 2,
  "icons": {
    "16": "images/icon-16.png",
    "19": "images/icon-19.png",
    "24": "images/icon-24.png",
    "48": "images/icon-48.png",
    "64": "images/icon-64.png",
    "96": "images/icon-96.png",
    "128": "images/icon-128.png"
  },

  "permissions": ["contextMenus", "storage"],

  "options_ui": {
    "page": "html/options.html",
    "open_in_tab": false
  },

  "browser_action": {},
  "background": {
    "persistent": false,
    "page": "html/background.html"
  },

  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["https://meet.google.com/*-*-*"],
      "js": ["js/inject.js"],
      "run_at": "document_end"
    }
  ],

  "commands": {
    "focus": {
      "description": "Focus the active meeting"
    },

    "mute-audio": {
      "description": "Mute all meetings (audio only)"
    },
    "unmute-audio": {
      "description": "Unmute all meetings (audio only)"
    },
    "toggle-mute-audio": {
      "suggested_key": "Ctrl+Shift+D",
      "description": "Toggle mute on all meetings (audio only)"
    },

    "mute-both": {
      "description": "Mute all meetings (audio+video)"
    },
    "unmute-both": {
      "description": "Unmute all meetings (audio+video)"
    },
    "toggle-mute-both": {
      "description": "Toggle mute on all meetings (audio+video)"
    },

    "mute-video": {
      "description": "Mute all meetings (video only)"
    },
    "unmute-video": {
      "description": "Unmute all meetings (video only)"
    },
    "toggle-mute-video": {
      "description": "Toggle mute on all meetings (video only)"
    }
  }
}
